{
  "name": "alfred-ds-bot",
  "version": "1.0.0",
  "description": "Discord bot inspired by Alfred: always listening, always on time, always elegant.",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsx watch src/index.ts",
    "format:check": "prettier --check .",
    "format": "prettier --write .",
    "lint-and-format": "npm run lint:fix && npm run format",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "lint": "eslint . --ext .ts,.js",
    "register": "tsx src/registry/register-commands.ts",
    "start": "node .",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "alfred",
    "bot",
    "discord"
  ],
  "author": "Antonio Estela",
  "license": "Apache-2.0",
  "packageManager": "pnpm@10.7.0",
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@eslint/json": "^0.13.2",
    "@eslint/markdown": "^7.2.0",
    "@types/node": "^22.18.0",
    "eslint": "^9.34.0",
    "globals": "^16.3.0",
    "prettier": "3.6.2",
    "semantic-release": "^24.2.7",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.42.0"
  },
  "dependencies": {
    "@discordjs/voice": "^0.19.0",
    "discord.js": "^14.22.1",
    "dotenv": "^17.2.2",
    "jiti": "^2.5.1",
    "libsodium-wrappers": "^0.7.15",
    "tsx": "^4.20.5"
  }
}
